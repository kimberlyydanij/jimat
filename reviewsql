CREATE TABLE review(
    review_number number(10,0) constraint review_review_number_pk primary key,
    review_seq_number number,
    review_writer_id varchar2(20) constraint review_review_writer_id_uk unique,
    review_write_date date,
    review_update_date date,
    review_content varchar(2000) constraint review_review_content_nn not null,
    review_main_number number,
    review_read_count_number number,
    review_tag_number number,
    review_good_number number,
    review_upload_number number
);

CREATE SEQUENCE review_num_seq
 START WITH 1 
 INCREMENT BY 1
 NOCACHE
 NOCYCLE;
 
INSERT INTO review(review_number, review_seq_number, review_writer_id,
            review_write_date, review_update_date, review_content, review_main_number,
            review_read_count_number, review_tag_number, review_good_number, review_upload_number)
VALUES(review_num_seq.nextval, 0, 'kakao_1234567890', 
            sysdate, sysdate, 'test', 0, 
            0, 0, 0, 0);

SELECT * FROM review;

DROP TABLE review;

SELECT * FROM user_constraints;

COMMIT;
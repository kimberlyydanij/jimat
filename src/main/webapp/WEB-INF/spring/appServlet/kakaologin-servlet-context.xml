<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<mvc:annotation-driven></mvc:annotation-driven>



	<!-- [2] SqlSessionFactoryBean 빈 선언 -->
	<bean id="sqlSessionFactory"
		class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="mapperLocations">
			<list>
				<value>classpath:config/member-mapper.xml</value>
			</list>
		</property>
	</bean>

	<!-- [3] SqlSessionTemplate 빈 선언 -->
	<bean id="sqlSession"
		class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="sqlSessionFactory" />
	</bean>

	<!-- [4] Repository 빈 선언-->
	<bean id="repository"
		class="dao.MemberRepository">
		<property name="sqlSession" ref="sqlSession" />
	</bean>

		<!-- [5] Service 빈 선언 -->
	<bean id="login_service" class="service.MemberService">
		<property name="mrt" ref="repository" />
	</bean>

	<!-- [6] controller 빈 선언-->
	<bean class="controller.MemberController">
		<property name="mst" ref="login_service" />	
	</bean>
	



</beans>
